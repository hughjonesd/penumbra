Package: penumbra
Type: Package
Title: A Palette Inspired By Nature
Version: 0.1.0
Authors@R:
    c(
    person(given = "David",
           family = "Hugh-Jones",
           role = c("aut", "cph", "cre"),
           email = "davidhughjones@gmail.com"),
    person(given = "Neal",
